<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lan_team_logo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="관리자 화면"
        android:textSize="25dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/monitoringNodeBtn"
        android:layout_width="@dimen/standard_field_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="산사태 센서 모니터링"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/showNodeMap"
        android:layout_width="@dimen/standard_field_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="토폴로지 상태 확인"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="20dp"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/sendPush"
        android:layout_width="@dimen/standard_field_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="재난 경고 보내기"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/alarmMode"
        android:layout_width="@dimen/standard_field_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="모니터링 OFF"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/settingIP"
        android:layout_width="@dimen/standard_field_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="FCM Server \nIP 설정"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="20dp"
        android:textStyle="bold"/>
</LinearLayout>
